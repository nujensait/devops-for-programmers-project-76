---
skip_list:
  - experimental  # Временное отключение экспериментальных правил
  - syntax-check  # Отключаем проверку синтаксиса (она выполняется отдельно)

exclude_paths:
  - .venv/  # Исключаем виртуальные окружения
  - tmp/    # Исключаем временные файлы

verbosity: 1
enable_list:
  - fqcn-builtins
  - no-log-password